<p id="notice"><%= notice %></p>

<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h3>Enter your ID here:</h3>
    <%= form_for "", url: event_guests_path, role: 'search', method: :get do %>
    <%= text_field_tag :search, @search_term, placeholder: "Enter ID here:" %>
    <% end %>
    <% @guests.each do |guest| %>
      <tr>
        <td> <%=guest.name %></td>
        <td> <%=guest.response %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
